    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">增加用户</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" id="form1">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">id</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" placeholder="请输入id" name="id">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">姓名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="请输入姓名" name="yonghuming">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">联系方式</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" placeholder="请输入联系方式" name="dianhua">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">住址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="请输入住址" name="dizhi">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">身份证</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="请输入身份证号" name="impid">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">驾照证号</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="请输入驾照证号" name="jiazhao">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="ok">OK</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModala" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">修改资料</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">id</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" name="id1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">姓名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="yonghuming1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">联系方式</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" name="dianhua1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">住址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="dizhi1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">身份证</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="impid1">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">驾照证号</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="jiazhao1">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="bianji">OK</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="myModalc" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog  bs-example-modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    确定要删除此用户吗？
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="dels">删除</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="js/PageNav.js"></script>
    <script src="js/jquery-1.12.3.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/underscore.js"></script>
    <script type="text/javascript">
        $.get("/student?page=1", function (data) {
            new PageNav({
                boxid: "pagenavbox",
                page: 1,
                pageAmount: data.pageAmount,
                change: function (pagenumber) {
                    gotopage(pagenumber);
                }
            })
            gotopage(1);
        })
        function gotopage(pagenumber) {
            $("#tbody").empty();
            $.get("/student?page=" + pagenumber, function (data) {
                $.each(data.results, function (i, n) {
                    $tr = $("<tr></tr>");
                    $("<td><input type='radio' data-id='" + n.id + "' class='checkbox' name='radio'></td>").appendTo($tr);
                    $("<td></td>").html(n.id).appendTo($tr);
                    $("<td></td>").html(n.yonghuming).appendTo($tr);
                    $("<td></td>").html(n.dianhua).appendTo($tr);
                    $("<td></td>").html(n.dizhi).appendTo($tr);
                    $("<td></td>").html(n.impid).appendTo($tr);
                    $("<td></td>").html(n.jiazhao).appendTo($tr);
                    $tr.appendTo($("#tbody"));
                })

            })
        }
        // 增加
        $("#ok").click(function () {
            $.post("/student", {
                id: parseInt($("input[name=id]").val()),
                yonghuming: $("input[name=yonghuming]").val(),
                dianhua: $("input[name=dianhua]").val(),
                dizhi: $("input[name=dizhi]").val(),
                impid: $("input[name=impid]").val(),
                jiazhao: $("input[name=jiazhao]").val(),
            }, function (data) {
                if (data.result == 1) {
                    alert("提交成功！");
                    window.location = "/find"
                } else if (data.result == -1) {
                    alert("提交失败");
                } else if (data.result == -2) {
                    alert("失败");
                }
            })

        })
        // 编辑
        $("#tbody").delegate(".checkbox", "click", function () {
            var $this = $(this).parent().parent().children();
            // 删除
            var This = $(this).parent().parent();
            var id = $(this).data("id");
            console.log(id);
            $("#dels").click(function () {
                $.ajax({
                    url: "/student/" + id,
                    type: "delete",
                    success: function (data) {
                        if (data.result == 1) {
                            alert("删除成功");
                            window.location = "/find"
                            This.remove();
                        } else {
                            alert("服务器错误！");
                        }
                    }
                })
                $.post("/student/" + id, function (data) {
                    if (data.results == 1) {
                        alert("成功");
                        This.remove();
                    } else if (data.results == -1) {
                        alert("失败")
                    }
                })
            })

            $("#update").click(function () {
                console.log(id)
                $.get("/student/" + id, function (data) {
                    console.log(id)
                    if (data.result == -1) {
                        alert("查无此人")
                    } else {
                        $("input[name=id1]").val(data.result.id);
                        $("input[name=yonghuming1]").val(data.result.yonghuming);
                        $("input[name=dianhua1]").val(data.result.dianhua);
                        $("input[name=dizhi1]").val(data.result.dizhi);
                        $("input[name=impid1]").val(data.result.impid);
                        $("input[name=jiazhao1]").val(data.result.jiazhao);
                    }
                })
            })
        })
        // 编辑
        $("#bianji").click(function () {
            var id = parseInt($("input[name=id1]").val());
            $.post("/student/" + id, {
                id: parseInt($("input[name=id1]").val()),
                yonghuming: $("input[name=yonghuming1]").val(),
                dianhua: $("input[name=dianhua1]").val(),
                dizhi: $("input[name=dizhi1]").val(),
                impid: $("input[name=impid1]").val(),
                jiazhao: $("input[name=jiazhao1]").val(),
            }, function (data) {
                if (data.result == 1) {
                    alert("修改成功！");
                    window.location = "/find";
                } else {
                    alert("服务器错误！");
                }
            })
        })
        $("#tui").click(function () {
            $.get("/tui", function (data) {
                alert("退出成功");
                window.location = "/find";
            })
        })
    </script>
</body>

